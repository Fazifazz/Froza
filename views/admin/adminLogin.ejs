<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Skydash Admin</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="/admin2/vendors/feather/feather.css">
  <link rel="stylesheet" href="/admin2/vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" href="/admin2/vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="/admin2/css/vertical-layout-light/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="/admin2/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <!-- <img src="/admin/images/my-logo.png" alt="logo"> -->
              </div>


              <% if (typeof error !== "undefined") { %>
                <div class="alert alert-danger mb-2" id="error-message"><%= error %></div>
                <script>
                    // Add a timeout to hide the error message after 3 seconds (adjust as needed)
                    setTimeout(function() {
                        var errorMessage = document.getElementById('error-message');
                        if (errorMessage) {
                            errorMessage.style.display = 'none';
                        }
                    }, 2000);
                </script>
            <% } %>
              <!-- <h6 class="font-weight-light">Sign in to continue.</h6> -->
              <form class="pt-3" action="/admin/login" method="post" id="loginForm" novalidate="novalidate">
                <div class="form-group">
                  <input type="email" class="form-control form-control-lg" id="email" placeholder="Email" name="email" required>
                  <div class="invalid-feedback" id="usernameError">Please enter a valid email.</div>
                  <small id="emailErr" class="error text-danger"></small>
                </div>
                <div class="form-group">
                  <input type="password" class="form-control form-control-lg" id="password" placeholder="Password" name="password" required>
                  <div class="invalid-feedback" id="passwordError">Please enter a valid password.</div>
                </div>
                <div class="mt-3">
                  <button type="submit"  class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" onclick="return validateLogin()" >SIGN IN</button>
                </div>
                <!-- <div class="text-center mt-4 font-weight-light">
                  Don't have an account? <a href="register.html" class="text-primary">Create</a>
                </div> -->
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->


  <!-- form front-end validation-->
  <script src="/validations/loginSignup.js"></script>
  <script>
    const form = document.querySelector("#loginForm")
    form.addEventListener("submit", (event) => {
        event.preventDefault();
        if (form.checkValidity() === false) {
            form.classList.add("was-validated")
        } else if (!customValidity()) {
            return;
        } 
        else {
            form.submit()
        }
    }, false)

    function customValidity() {
        const password = document.getElementById("password")
          if (password.value.length < 6) {
            password.classList.add("is-invalid");
            password.nextElementSibling.style.display = "block";
            return false;
          } 
          return true;
    }
    </script>
  <!-- plugins:js -->
  <script src="/admin2/vendors/js/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page -->
  <!-- End plugin js for this page -->
  <!-- inject:js -->
  <script src="/admin2/js/off-canvas.js"></script>
  <script src="/admin2/js/hoverable-collapse.js"></script>
  <script src="/admin2/js/template.js"></script>
  <script src="/admin2/js/settings.js"></script>
  <script src="/admin2/js/todolist.js"></script>
  <!-- endinject -->


</body>

</html>


























































































































































































































































































































































































































































































































































































































