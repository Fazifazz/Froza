<%- include('../../layouts/headerAdmin') %>

            <body>
              <div class="container-scroller">
                <%- include('../../layouts/_navbar') -%>
                <!-- partial -->
                <div class="container-fluid page-body-wrapper">
                  <!-- partial -->
                  <!-- sidebar partial-->
                  <%- include('../../layouts/_sidebar') -%>
            
            
                  <!-- partial -->
                  <div class="main-panel">
                    <div class="content-wrapper">
                      <div class="row">
            
                        <div class="col-lg-12 grid-margin stretch-card">
                          <div class="card">
                            <div class="card-body">
                              <div class="d-flex justify-content-between align-items-center">
                                <h4 class="card-title">Banner List</h4>
                                <a href="/admin/banners/create" class="btn btn-primary btn-sm">Create Banner</a>
                                <!-- <form action="/admin/products" method="GET">
                                  <div class="d-flex">
                                      <input type="search" name="q" placeholder="Search prouduct" class="form-control rounded-pill"/>
                                      <button type="submit" class="btn btn-success rounded-pill ms-2">Search</button>
                                  </div>
                              </form> -->
                              </div>
                              <div class="table-responsive">
                                <table class="table table-striped">
                                  <thead>
                                    <tr>
                                      <th>
                                        Banner name
                                      </th>
                                      <th>
                                        Images
                                      </th>
                                      <th>
                                        Actions
                                      </th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <% banners.forEach(bnr => { %>
                                      <tr>
                                        <td class="py-1">
                                          <p><%= bnr.heading %></p>
                                        </td>
                                        <td>
                                          <% bnr.images.forEach(img => { %>
                                            <div class="row">
                                                <div class="col-4">
                                                    <img class="img-click" src="<%= img %>" alt="">
                                                </div>
                                            </div>
                                          <% }) %>
                                        </td>
            
          
                                        <td>
                                            <a href="/admin/banners/<%= bnr._id %>/edit" class="btn btn-info btn-sm">Edit</a>
                                            <%if(bnr.is_deleted){%>
                                              <form action="/admin/banners/destroy" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="<%= bnr._id %>">
                                                <input type="hidden" name="state" value="">
                                                <button type="submit" class="btn btn-success btn-sm">Acivate</button>
                                              </form>
                                          <% } else { %>
                                              <form action="/admin/banners/destroy" method="post" class="d-inline">
                                                  <input type="hidden" name="id" value="<%=bnr._id%>">
                                                  <input type="hidden" name="state" value="1">
                                                  <button type="submit" class="btn btn-danger btn-sm">De activate</button>
                                                </form>
                                          <%}%>
                                            
                                        </td>
                                      </tr>
                                    <% }) %>
                                      
                                  </tbody>
                                </table>
                              </div>
                            </div>
                          </div>
                        </div>
            
                        
                        
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                   
                    <!-- partial -->
                  </div>
                  <!-- main-panel ends -->
                </div>
                <!-- page-body-wrapper ends -->
              </div>
              <!-- container-scroller -->
              <!-- plugins:js -->
              <script src="../../vendors/js/vendor.bundle.base.js"></script>
              <!-- endinject -->
              <!-- Plugin js for this page -->
              <!-- End plugin js for this page -->
              <!-- inject:js -->
              <script src="../../js/off-canvas.js"></script>
              <script src="../../js/hoverable-collapse.js"></script>
              <script src="../../js/template.js"></script>
              <script src="../../js/settings.js"></script>
              <script src="../../js/todolist.js"></script>
            
              <script>
                const images = document.querySelectorAll('.img-click')
            
                images.forEach(img => {
                    img.addEventListener('click', () => {
                        const div = document.createElement('div')
                        const mask = document.createElement('div')
                        mask.style.position = 'fixed'
                        mask.style.inset = '0'
                        mask.style.backgroundColor = 'rgba(0, 0, 0, 0.4)'
                        div.style.height = '100vh'
                        div.style.width = '100%'
                        div.style.position = 'fixed'
                        div.style.inset = '0'
                        div.style.display = 'flex'
                        div.style.flexDirection = 'column'
                        div.style.alignItems = 'center'
                        div.style.justifyContent = 'center'
                        div.style.zIndex = '99999'
                        const imgEl = document.createElement('img')
                        imgEl.src = img.src
                        imgEl.style.position = 'relative'
                        imgEl.style.cursor = 'zoom-in'
                        imgEl.onclick = (e) => {
                            e.preventDefault()
                            if (imgEl.style.transform == '') {
                                imgEl.style.transform = 'scale(1.5)'
                                imgEl.style.cursor = 'zoom-out'
                            } else {
                                imgEl.style.transform = ''
                                imgEl.style.cursor = 'zoom-in'
                            }
                            console.log(imgEl.style.transform);
                        }
                        imgEl.oncontextmenu = e => {
                            e.preventDefault()
                            console.log(e.buttons & 1);
                        }
                        div.appendChild(mask)
                        div.appendChild(imgEl)
                        document.body.appendChild(div)
            
                        mask.onclick = () => {
                            document.body.removeChild(div)
                        }
                    })
                })
            
            
              </script>
              <!-- endinject -->
              <!-- Custom js for this page-->
              <!-- End custom js for this page-->
            </body>
                
            <%- include('../../layouts/footerAdmin') %>

 