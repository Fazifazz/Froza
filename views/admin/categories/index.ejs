<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>


  <script>
    const images = document.querySelectorAll('.img-click')

    images.forEach(img => {
        img.addEventListener('click', () => {
            const div = document.createElement('div')
            const mask = document.createElement('div')
            mask.style.position = 'fixed'
            mask.style.inset = '0'
            mask.style.backgroundColor = 'rgba(0, 0, 0, 0.4)'
            div.style.height = '100vh'
            div.style.width = '100%'
            div.style.position = 'fixed'
            div.style.inset = '0'
            div.style.display = 'flex'
            div.style.flexDirection = 'column'
            div.style.alignItems = 'center'
            div.style.justifyContent = 'center'
            div.style.zIndex = '99999'
            const imgEl = document.createElement('img')
            imgEl.src = img.src
            imgEl.style.position = 'relative'
            imgEl.style.cursor = 'zoom-in'
            imgEl.onclick = (e) => {
                e.preventDefault()
                if (imgEl.style.transform == '') {
                    imgEl.style.transform = 'scale(1.5)'
                    imgEl.style.cursor = 'zoom-out'
                } else {
                    imgEl.style.transform = ''
                    imgEl.style.cursor = 'zoom-in'
                }
                console.log(imgEl.style.transform);
            }
            imgEl.oncontextmenu = e => {
                e.preventDefault()
                console.log(e.buttons & 1);
            }
            div.appendChild(mask)
            div.appendChild(imgEl)
            document.body.appendChild(div)

            mask.onclick = () => {
                document.body.removeChild(div)
            }
        })
    })


    //pop up for delete category

    // Function to show the confirmation dialog
  
    // Function to show a success toast message
    // Function to show a success toast message
    function showSuccessToast(message) {
        Toastify({
            text: message,
            duration: 3000, // 3 seconds
            gravity: 'top', // Display at the top
            position: 'right', // Position on the right
            backgroundColor: 'green', // Background color for success
        }).showToast();
    }

    // Function to show an error toast message
    function showErrorToast(message) {
        Toastify({
            text: message,
            duration: 3000, // 3 seconds
            gravity: 'top', // Display at the top
            position: 'right', // Position on the right
            backgroundColor: 'red', // Background color for error
        }).showToast();
    }

    // Function to show the confirmation dialog and handle the delete action
    function confirmDelete(categoryId) {
        const confirmation = confirm('Are you sure you want to delete this category?');

        if (confirmation) {
            // If the user confirms, proceed with the delete action
            const form = document.createElement('form');
            form.method = 'post';
            form.action = `/admin/categories/${categoryId}?_method=DELETE`;

            // Submit the form to trigger the delete action
            document.body.appendChild(form);

            // Show a success toast message for delete
            showSuccessToast('Item deleted');

            // Add a delay before submitting the form and refreshing the page
            setTimeout(function () {
                form.submit();
            }, 1000); // Adjust the delay time as needed
        } else {
            // If the user cancels, show an error toast message
            showErrorToast('Delete action canceled');
        }
    }

    // Function to show a success toast message after editing
    function showEditSuccessToast() {
        showSuccessToast('Item edited');
    }

  </script>

