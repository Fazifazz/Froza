<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include your meta tags and CSS links here -->
</head>
<body>
    <!-- Include header -->
    <%- include('../../layouts/headerAdmin') %>

    <!-- Navbar -->
    <%- include('../../layouts/_navbar') %>

    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper">
            <!-- Sidebar -->
            <%- include('../../layouts/_sidebar') %>

            <!-- Main Content -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                 
                                    <!-- order details code below -->
                                    <section style="background-color: #f9f9f9;">
                                        <div class="container py-5">
                                          <div class="row justify-content-center mb-3">
                    
                                        <% details.forEach((order)=> { %>
                    
                                            <div class="col-md-12 col-xl-10">
                                              <div class="card shadow-0 border rounded-3">
                                                <div class="card-body">
                                                  <div class="row">
                                                    <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                                      <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                                        <img src="<%= order.products.product[0].images[0]  %>"
                                                          class="w-100" />
                                                        <a href="#!">
                                                          <div class="hover-overlay">
                                                            <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                                          </div>
                                                        </a>
                                                      </div>
                                                    </div>
                                                    <div class="col-md-6 col-lg-6 col-xl-6">
                                                      <h5><%= order.products.product[0].title %></h5>
                                                      <p class="text-truncat mb-4 mb-md-0">
                                                        <%= order.products.product[0].description  %>
                                                      </p>
                                                      <p class="text-truncat mb-4 mb-md-0">
                                                        <b>ordered on:</b><span><%= order.orderDate.toDateString()  %></span>
                                                      </p>
                                                      <p class="text-truncat mb-4 mb-md-0">
                                                        <b>quantity:</b><span><%= order.products.quantity  %></span>
                                                      </p>
                                                      <!-- <p class="text-truncat mb-4 mb-md-0">
                                                        <b>subtotal:</b><span>sdfdf</span>
                                                      </p> -->
                                                    </div>
                                                    <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                                      <div class="d-flex flex-row align-items-center mb-1">
                                                        <h4 class="mb-1 me-1">&#8377;<%= order.products.product[0].regularPrice  %></h4>
                                                      </div>
                                                      <h6 class="text-success"><%= order.status  %></h6>
                                                      
                                                    </div>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                            <% }) %>
                                          </div>
                                          
                                                
                                        </div>
                                      </section>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Include Bootstrap JS and jQuery -->
    <script src="/admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/admin/js/off-canvas.js"></script>
    <script src="/admin/js/hoverable-collapse.js"></script>
    <script src="/admin/js/template.js"></script>
    <script src="/admin/js/settings.js"></script>
    <script src="/admin/js/todolist.js"></script>
  
    <!-- Include your script tags here -->

    <!-- Include footer -->
    <%- include('../../layouts/footerAdmin') %>
</body>
</html>
