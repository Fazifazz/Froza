            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Edit Product</h4>
                  
                <form class="forms-sample" action="/admin/products/<%= product._id %>?_method=PATCH" method="post">
                    <div class="form-group">
                      <label for="name">Product Name</label>
                      <input type="text" class="form-control" name="title" id="name" value="<%= product.title %>" placeholder="Name" >
                    </div>
                    
                    <div class="form-group">
                      <label for="exampleInputName1">Product description</label>
                      <input type="text" class="form-control" name="description" id="exampleInputName1" value="<%= product.description %>" placeholder="description">
                    </div>
                    
                    <div class="form-group">
                      <label for="exampleInputName1">MRP price</label>
                      <input type="number" class="form-control" name="mrp" id="exampleInputName1" value="<%= product.mrp %>" placeholder="price">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Regular price</label>
                      <input type="number" class="form-control" name="regular" id="exampleInputName1" value="<%= product.regularPrice %>" placeholder="price">
                    </div>
                    
                    <div class="form-group">
                      <label for="exampleInputName1">Product stock</label>
                      <input type="number" class="form-control" name="stock" id="exampleInputName1" value="<%= product.stock %>" placeholder="stock">
                    </div>
                    
                    <div class="form-group">
                      <label for="cat">Product category</label>
                      <select name="category" id="cat" class="form-control">
                          
                          <% category.forEach(cat => { %>
                              <option value="<%= cat._id %>"><%= cat.name %></option>
                          <% }) %>
                      </select>     
                    </div>
                  
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a href="/admin/category" class="btn btn-light">Cancel</a>
                </form>
                <% if (product.images.length) { %>
                  <div class="card mt-3">
                    <div class="card-header">
                        Preview Image
                    </div>
                    <div class="card-body">
                      <div class="row">
                        <% product.images.forEach(img => { %>
                          <div class="col-4">
                            <figure>
                              <img src="<%= img %>" alt="img" class="preview" id="preview-img" style="max-width: 440px; object-fit: contain;" />
                              <form action="/admin/products/<%= product._id %>/img/delete?_method=DELETE" method="post" class="mt-3">
                                <input type="hidden" name="image" value="<%= img %>">
                                <div class="d-grid">
                                  <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                              </form>
                            </figure>
                          </div>
                        <% }) %>
                      </div>
                    </div>
                  </div>
                <% } %>
                <% if (product.images.length < 3) { %>
                  <div class="card mt-3">
                    <div class="card-header">
                      Upload
                    </div>
                    <div class="card-body">
                      <form action="/admin/products/<%= product._id %>/img/add?_method=PATCH" method="post" enctype="multipart/form-data" id="uploadImg">
                        <div class="mb-3" id="appendError">
                          <input type="file" accept="image/*" <%= product.images.length > 1 ? '' : 'multiple' %> name="images" class="form-control file-upload-info" placeholder="Upload Image" id="preview-input" />
                        </div>
                        <div class="d-grid">
                          <button type="submit" class="btn btn-primary">Upload</button>
                        </div>
                      </form>
                    </div>
                  </div>
                <% } %>
                </div>
              </div>
            </div>
            </div>
          </div>
