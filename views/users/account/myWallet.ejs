<%- include('../../layouts/header') %>

<%- include('../../layouts/userNav') %>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <%- include('../../layouts/profile_sidebar') %>

        <!-- Main Content -->
        <section>
            <div class="row">
                <div class="col-md-12">
                    <h2>Your Wallet</h2>
                    <!-- Display Wallet Balance -->
                    <p><strong>Wallet Balance:</strong> <%= user.wallet %> INR</p>

                    <!-- Wallet Recharge Form -->
                    <h3>Recharge Wallet</h3>
                    <form id="wallet-recharge-form">
                        <div class="form-group">
                            <label for="amount">Enter Amount (INR)</label>
                            <input type="number" id="amount" class="form-control" required>
                        </div>
                        <button type="button" id="recharge-button" class="btn btn-primary">Recharge</button>
                    </form>
                </div>
            </div>

            <!-- Wallet Transaction History -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <h3>Wallet Transaction History</h3>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Amount (INR)</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.walletHistory.forEach((transaction) => { %>
                                <tr>
                                    <td><%= transaction.date.toDateString() %></td>
                                    <td><%= transaction.amount %></td>
                                    <td><%= transaction.message %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

<!-- JavaScript to initiate the payment -->


<%- include('../../layouts/footer') %>
