<%- include('../../layouts/header') %>
   




    

<body>
    <%- include('../../layouts/userNav') %><!-- Navbar -->
    <div class="container-fluid">
        <div class="row">
            
            <!-- Sidebar -->
            
        <%- include('../../layouts/profile_sidebar') %>
            <!-- Main Content -->
            
            
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    

    
        <section style="background-color: #eee;">
            <div class="container py-5">
              <div class="row justify-content-center mb-3">
               <% details.forEach((order)=>{  %>
                <div class="col-md-12 col-xl-10">
                    
                  <div class="card shadow-0 border rounded-3">
                    
                    <div class="card-body">
                        
                    
                      <div class="row">
                        <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                          <div class="bg-image hover-zoom ripple rounded ripple-surface">
                            <img src="<%=order.products.product[0].images[0] %>"
                              class="w-100" />
                            <a href="#!">
                              <div class="hover-overlay">
                                <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                              </div>
                            </a>
                          </div>
                        </div>
                        <div class="col-md-6 col-lg-6 col-xl-6">
                          <h5><%=order.products.product[0].title %></h5>
                          <div class="d-flex flex-row">
                            <div class="text-danger mb-1 me-2">
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                            </div>
                            <span>310</span>
                          </div>
                          <div class="mt-1 mb-0 text-muted small">
                           <P><%=order.products.product[0].description %></P>
                           <p><b>Quantity:</b><%= order.products.quantity%>pieces</p>
                          </div>
                          
                          <p class="text-truncate mb-4 mb-md-0">
                            <b>ordered on:</b><span><%= order.orderDate.toDateString() %></span>
                          </p>
                        </div>
                        <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                          <div class="d-flex flex-row align-items-center mb-1">
                            <h4 class="mb-1 me-1">&#8377;<%= order.products.product[0].regularPrice %><p>(per piece)</p>  </h4>
                          </div>
                          <h6 class="text-success"><%= order.status %></h6>
                          <div class="d-flex flex-column mt-4">
                            <a class="btn btn-primary btn-sm" href="/shop/<%= order.products.product[0]._id%>">Details</a>
                          </div>
                        </div>
                      </div>
                      

                    </div>
                    

                  </div>
                  
                </div>
                <% }) %>
              </div>




            </div>
          </section>

          
    
    </main>



</div>
</div>


    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
</body>
</html>