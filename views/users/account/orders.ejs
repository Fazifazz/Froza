<%- include('../../layouts/header') %>
   




    

<body>
    <%- include('../../layouts/userNav') %><!-- Navbar -->
    <div class="container-fluid">
        <div class="row">
            
            <!-- Sidebar -->
            
        <%- include('../../layouts/profile_sidebar') %>
            <!-- Main Content -->
            
            
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="col-md-9">
        <section style="background-color: #eee;">
            <div class="container py-5">
              <% if (success && success.length > 0) { %>
                <div class="alert alert-success text-center" id="success-message">
                  <% success.forEach(function(message) { %>
                    <p><%= message %></p>
                  <% }); %>
                </div>
                <script>
                    setTimeout(function() {
                      var successMessage = document.getElementById('success-message');
                      if (successMessage) {
                        successMessage.style.display = 'none';
                      }
                    }, 2000); 
                  </script>
                <% } %>

            <% if(orders.length){ %>
          <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
              <div class="card shadow-0 border rounded-3">
                <div class="card-body">
                    <% orders.forEach((order)=>{ %>
                  <div class="row">
                    <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                      <div class="bg-image hover-zoom ripple rounded ripple-surface">
                        <!-- <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/img%20(4).webp"
                          class="w-100" /> -->
                          <p><b>orderId:</b></p> <span><%=order.orderId%></span>
                        <a href="#!">
                          <div class="hover-overlay">
                            <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                          </div>
                        </a>
                      </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-6">
                        <span><b>ordered on:</b><%= order.orderDate.toDateString()%></span>
                      <h6 class="text-secondary">items:</h6>
                      <% order.products.product.forEach((prdt)=>{ %>
                      <div class="d-flex flex-row">
                        <div class="text" style="font-size:medium;font-weight:500px; line-height:0;">
                          <p>*<%= prdt.title %></p>
                        </div>
                      </div>
                      <% }) %>
                      <!-- <div class="mb-2 text-muted small">
                        
                      </div> -->
                    </div>
                    <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                      <div class="d-flex flex-row align-items-center mb-1">
                        <h4 class="mb-1 me-1">&#8377;<%= order.totalPrice%>/-</h4>
                      </div>
                      <span class="text-success"><b><%= order.status%></b></span>
                      <div class="d-flex flex-column mt-4">
                        <form action="showOrders/orderDetails"  method="post">
                            <input type="hidden" name="orderId" value="<%= order.orderId %>">
                            <button class="btn btn-primary btn-sm" type="submit">Details</button>
                        </form>
                        <form action="/showOrders/cancelOrder" method="post" onsubmit="return confirm('Are you sure you want to cancel this order?')">
  <input type="hidden" name="orderId" value="<%= order.orderId%>">
  <button class="btn btn-outline-primary btn-sm mt-2" type="submit">
    Cancel Order
  </button>
</form>

                      </div>
                    </div>
                  </div>
                  <% }) %>
                </div>
              </div>
            </div>
          </div>
         
          <% }else{ %>
            <h6><center>No Orders</center></h6>
            <% } %>
        </div>
      </section>
    </div>
    </main>



</div>
</div>


    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
</body>
</html>