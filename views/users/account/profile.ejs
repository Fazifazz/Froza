<%- include('../../layouts/header') %>
   
<style>
    /* Basic styling for the readonly box */
    .readonly-box {
        border: 1px solid #ccc;
        padding: 20px;
        max-width: 500px;
        margin: 0 auto; /* Center the box horizontally */
        background-color: #f9f9f9;
    }

    /* Style for the user details */
    .user-details {
        font-weight: normal;
    }
</style>

<body>
    <!-- Navbar -->
    <%- include('../../layouts/userNav') -%>

    <!-- Sidebar -->
    <div class="container-fluid">
      <div class="row">
          
          <%- include('../../layouts/profile_sidebar') %>
          <!-- Main Content -->
          <!-- <section class="vh-10" style="background-color: #f9f9f9;"> -->
              <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                  <div class="col col-md-9 col-lg-7 col-xl-5">
                    <div class="card" style="border-radius: 15px; background-color: #f9f9f9;">
                      <div class="card-body p-4 text-black">
                        <div>
                          <h6 class="mb-4">Profile</h6>
                          <div class="d-flex align-items-center justify-content-between mb-3">
                            <p class="small mb-0"><i class="me-2"></i></p>
                            <p class="fw-bold mb-0">verified</p>
                          </div>
                        </div>
                        <div class="d-flex align-items-center mb-4">
                          <div class="flex-shrink-0">
                            <img src="<%= user.profile  %>"
                              alt="image" class="img-fluid rounded-circle border border-dark border-3"
                              style="width: 70px;">
                          </div>
                          <div class="flex-grow-1 ms-3">
                            <div class="d-flex flex-row align-items-center mb-2 ml-5">
                              <p class="mb-0 me-2"><b>name</b><br><%= user.name  %></p>
                          </div>
                          <div class="ml-5">
                            <p class="mb-0 me-2"><b>Email </b> <br> <%= user.email  %></p>
                            <p class="mb-0 me-2"><b>Phone </b><br> <%= user.mobile  %></p>
                          </div>
                              
                              
                              
                              
                          </div>
                        </div>
                        <hr>
                        <p class="my-4 pb-1"></p>
                        <a href="/profile/edit" class="btn btn-primary btn-rounded btn-block btn-sm"><i
                            class="me-2"></i>Edit Profile</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>


              <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
              <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
              <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
              

            </body>
            </html>