    <%- include('../layouts/header') %>
    <!-- Navbar -->
    <!-- ... (Your navigation content) ... -->
	<%-  include('../layouts/userNav')  %>
    <!-- Breadcrumbs -->
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="bread"><span><a href="index.html">Home</a></span> / <span>Checkout</span></p>
                </div>
            </div>
        </div>
    </div>

	
    <!-- Checkout Content -->
    <div class="container">
        <div class="row">
            <!-- Address Details (Left Column) -->
            <div class="col-lg-8">
                <!-- Default Address Table -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Default Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% addresses.forEach(function(address, index) { %>
                            <tr>
                            <% if(address.defaultAddress){ %>
                                <td>
                                    <!-- Address Details -->
                                    <span><%= address.phone %></span><br>
                                    <span><%= address.address %>, <%= address.landMark %>, <%= address.locality %>,
                                        <%= address.district %> District, <%= address.state %>, <%= address.pincode %>.</span>
                                    <span>
                                    </span>
                                </td>
                                <% } %>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <a href="/profile/addAddress">Ship to a new Address?</a>
                </div>

                <!-- Payment Method -->
                <form action="/showOrders" method="post">
                    <div class="col-md-12">
                        <div class="cart-detail">
                            <h2>Payment Method</h2>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="radio">
                                       <label><input type="radio" name="paymentOptions" value="bank"> Direct Bank Transfer</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="radio">
                                       <label><input type="radio" name="paymentOptions" value="cod"> Cash on Delivery</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="radio">
                                       <label><input type="radio" name="paymentOptions" value="paypal"> Paypal</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-left">
                            <button type="submit" class="btn btn-dark">Place Order</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Cart Total (Right Column) -->
            <div class="col-lg-4">
                <div class="col-md-12">
                    <div class="cart-detail">
                        <h2>Cart Total</h2>
                        <ul>
                            <% cart.forEach((cartItem)=>{ %>
                            <li><span><%=cartItem.quantity%> x <%- cartItem.product.title  %></span> <span>&#8377;<%-cartItem.total %></span></li>
                            <% }); %>
                        </ul>
                        <ul>
                            <li>
                                <b><span>Subtotal</span> <span>&#8377;<%= totalCartAmount %></span></b>
                            </li>
                            <li>
                                <b><span>Shipping</span> <span>&#8377;0.00</span></b>
                            </li>
                            <li>
                                <b><span>Order Total</span> <span>&#8377;<%-totalCartAmount%></span></b>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="w-100"></div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
    <!-- ... (Your other scripts) ... -->
</body>
</html>
