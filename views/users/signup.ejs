<%- include('../layouts/header') %>

<style>
    small.error {
        color: red;
    }
</style>

<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-sm-12">
                    <div class="card shadow-2-strong">
                        <div class="p-5">
                            <div class="text-center">
                                <h3 class="mb-3">USER SIGN UP</h3>
                            </div>
                            <form action="/signup" method="post" onsubmit="return validateForm()">
                                <% if (typeof error !== "undefined") { %>
                                    <div class="alert alert-danger mb-2" id="error-message"><%= error %></div>
                                    <script>
                                        // Add a timeout to hide the error message after 3 seconds (adjust as needed)
                                        setTimeout(function() {
                                            var errorMessage = document.getElementById('error-message');
                                            if (errorMessage) {
                                                errorMessage.style.display = 'none';
                                            }
                                        }, 2000);
                                    </script>
                                <% } %>
                            
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="name">Full Name</label>
                                    <input type="text" id="name" class="form-control form-control-md rounded-0"
                                        placeholder="Enter the Full name" name="name" required />
                                    <small id="nameErr" class="text-danger"></small>
                                </div>
                            
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="mobile">Mobile</label>
                                    <input type="number" id="mobile" class="form-control form-control-md rounded-0"
                                        placeholder="Enter Mobile No." name="mobile" required />
                                    <small id="mobileErr" class="text-danger"></small>
                                </div>
                            
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="email">Email</label>
                                    <input type="email" id="email" class="form-control form-control-md rounded-0"
                                        placeholder="Enter email" name="email" required />
                                    <small id="emailErr" class="text-danger"></small>
                                </div>
                            
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="password">Password</label>
                                    <input type="password" id="password"
                                        class="form-control form-control-md rounded-0" placeholder="Enter your password" name="password" required />
                                    <small id="passwordErr" class="text-danger"></small>
                                </div>
                            
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="confirmPassword">Confirm Password</label>
                                    <input type="password" id="confirmPassword"
                                        class="form-control form-control-md rounded-0" placeholder="Confirm Password" name="confirmPassword" required />
                                    <small id="confirmPasswordErr" class="text-danger"></small>
                                </div>
                                <div class="form-outline mb-3">
                                    <label class="form-label" for="referral">Referal code</label>
                                    <input type="referral" id="referral" 
                                        class="form-control form-control-md rounded-0" placeholder="(optional)" name="referral">
                                    <small id="referralErr" class="text-danger"></small>
                                </div>
                            
                                <div class="text-center">
                                    <button class="btn btn-dark btn-md rounded-pill px-5 py-2 login-btn" type="submit" onclick="return validateSignUp()">SIGN UP</button>
                                    <p><%= locals.message ? message : '' %></p>
                                    <div class="mt-2">
                                        <p>Already registered ? <a href="/login">Login</a></p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/validations/loginSignup.js"></script>
    
<%- include('../layouts/footer') %>
